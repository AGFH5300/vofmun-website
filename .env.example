# Copy this file to .env.local (or similar) and fill in your real values.
# Any variable marked OPTIONAL can be omitted if you do not need the related feature locally.

# Database connection string for Drizzle, scripts, and local dev tooling
DATABASE_URL="postgresql://user:password@db-host:5432/vofmun"

# Supabase project credentials (required for API routes + storage helpers)
NEXT_PUBLIC_SUPABASE_URL="https://your-supabase-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="public-anon-key"
SUPABASE_URL="https://your-supabase-project.supabase.co"          # OPTIONAL, used by admin scripts
SUPABASE_SERVICE_ROLE_KEY="service-role-key"                     # OPTIONAL, unlocks storage helpers + scripts
SUPABASE_STORAGE_PUBLIC_URL="https://your-supabase-project.supabase.co/storage/v1/object/public" # OPTIONAL override

# Supabase storage buckets (update names if you changed them in your Supabase project)
NEXT_PUBLIC_SUPABASE_PAYMENT_PROOFS_BUCKET="payment-proofs"
NEXT_PUBLIC_SUPABASE_DELEGATION_SPREADSHEETS_BUCKET="delegation-spreadsheets"
NEXT_PUBLIC_SUPABASE_SCHOOL_DELEGATIONS_BUCKET="school-delegations"

# Stripe checkout link shown in the registration + proof-of-payment forms (OPTIONAL)
NEXT_PUBLIC_STRIPE_PAYMENT_URL="https://buy.stripe.com/your-checkout-link"

# Registration portal password for the /system page (OPTIONAL, leave blank to disable gate)
SIGNUP_PORTAL_PASSWORD=""

# Email delivery via Resend (required to send registration confirmations)
RESEND_API_KEY="re_1234567890abcdef"

# Gemini API access for experience parsing (OPTIONAL feature)
GEMINI_API_KEY=""
GEMINI_MODEL="gemini-2.0-flash"

# Local dev helper knobs (OPTIONAL)
PORT=3000
HOST="127.0.0.1"
WARMUP_BASE="http://127.0.0.1:3000"
WARMUP_CONCURRENCY=6
COOKIE_HEADER=""
